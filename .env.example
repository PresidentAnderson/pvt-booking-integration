# Environment Configuration
NODE_ENV=development

# Database Options
MONGODB_URI=mongodb://localhost:27017/pvt-booking
# Alternative: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pvt-booking

# Neon PostgreSQL Database (Alternative/Migration Target)
NEON_DATABASE_URL=postgresql://username:password@ep-example.us-east-2.aws.neon.tech/dbname?sslmode=require
NEON_API_KEY=napi_your_neon_api_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRE=30d

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (using Gmail as example)
EMAIL_FROM=noreply@pvthostel.com
EMAIL_FROM_NAME=PVT Hostel
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
APP_NAME=PVT Booking Integration
APP_URL=https://your-domain.com
API_URL=https://your-api-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Booking Configuration
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=America/New_York
CHECK_IN_TIME=15:00
CHECK_OUT_TIME=11:00

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Development
LOG_LEVEL=debug
ENABLE_LOGGING=true