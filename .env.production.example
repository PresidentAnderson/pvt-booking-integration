# Production Environment Configuration
# PVT Booking Integration - Production Settings
# Credentials stored securely in 1Password: "PVT Booking Integration - Production Credentials"

NODE_ENV=production

# Database Configuration
# MongoDB Atlas (Primary)
MONGODB_URI=mongodb+srv://pvt-production:${MONGODB_PASSWORD}@production-cluster.mongodb.net/pvt-booking?retryWrites=true&w=majority

# Neon PostgreSQL (Migration Target/Alternative)
# Retrieved from 1Password: op://PVT Hostel/PVT Booking Integration - Production Credentials/NEON_API_KEY
NEON_API_KEY=${NEON_API_KEY}
NEON_DATABASE_URL=postgresql://${NEON_USER}:${NEON_PASSWORD}@${NEON_ENDPOINT}/pvt_booking?sslmode=require

# JWT Configuration (Production Secrets)
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_EXPIRE=1h
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET_PRODUCTION}
REFRESH_TOKEN_EXPIRE=7d

# Stripe Configuration (Live Keys)
STRIPE_PUBLISHABLE_KEY=${STRIPE_LIVE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_LIVE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_LIVE_WEBHOOK_SECRET}

# Email Configuration (Production SMTP)
EMAIL_FROM=noreply@pvthostel.com
EMAIL_FROM_NAME=PVT Hostel
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY}

# Application Configuration
APP_NAME=PVT Booking Integration
APP_URL=https://pvthostel.com
API_URL=https://api.pvthostel.com
FRONTEND_URL=https://book.pvthostel.com
ADMIN_URL=https://admin.pvthostel.com

# Netlify Configuration
NETLIFY_SITE_ID=9859175f-7eca-4a7a-8e18-6ef31ac697d9
NETLIFY_URL=https://9859175f-7eca-4a7a-8e18-6ef31ac697d9.netlify.app

# Rate Limiting (Production Settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (Production)
BCRYPT_ROUNDS=14
SESSION_SECRET=${SESSION_SECRET_PRODUCTION}

# External APIs (Production Keys)
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_PRODUCTION_KEY}

# Monitoring & Logging
SENTRY_DSN=${SENTRY_PRODUCTION_DSN}
LOG_LEVEL=info
ENABLE_LOGGING=true

# Performance
REDIS_URL=${REDIS_PRODUCTION_URL}
CACHE_TTL=3600

# File Storage (Production)
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_PRODUCTION}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_PRODUCTION}
AWS_REGION=us-east-1
AWS_S3_BUCKET=pvt-booking-uploads-production

# Booking Configuration
DEFAULT_CURRENCY=CAD
DEFAULT_TIMEZONE=America/Toronto
CHECK_IN_TIME=15:00
CHECK_OUT_TIME=11:00

# Development Overrides (Disabled in Production)
LOG_LEVEL=error
ENABLE_LOGGING=true